# Global Travel Report Environment Variables
# Copy this file to .env.local and fill in your actual values

# Base URL Configuration
NEXT_PUBLIC_BASE_URL=https://www.globaltravelreport.com
NEXT_PUBLIC_SITE_URL=https://www.globaltravelreport.com

# Google Services
NEXT_PUBLIC_GA_ID=G-K8BJQ43XFT
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-K8BJQ43XFT

# API Keys - REQUIRED FOR PRODUCTION
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Email Service Configuration
MAILERLITE_API_URL=https://connect.mailerlite.com/api
MAILERLITE_API_KEY=your_mailerlite_api_key_here
MAILERLITE_DEFAULT_GROUP_ID=

# Social Media API Keys (Optional)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Database Configuration (Optional)
# DATABASE_URL=your_database_url_here
# MONGODB_URI=your_mongodb_uri_here

# Newsletter Configuration
NEWSLETTER_PROVIDER=mailerlite
NEWSLETTER_FROM_EMAIL=noreply@globaltravelreport.com
NEWSLETTER_FROM_NAME=Global Travel Report

# Development/Production Flags
NODE_ENV=production

# Analytics and Tracking
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=google
USER_BEHAVIOR_TRACKING=true

# SEO Configuration
SEO_ENABLED=true
AUTO_GENERATE_SITEMAP=true
AUTO_GENERATE_STRUCTURED_DATA=true
AUTO_GENERATE_META_TAGS=true

# Performance Configuration
PERFORMANCE_MONITORING=true
CORE_WEB_VITALS_TRACKING=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# Content Processing
CONTENT_REWRITING_ENABLED=false
IMAGE_GENERATION_ENABLED=false
AUTO_SOCIAL_POSTING=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Error Monitoring (Optional)
ERROR_REPORTING_ENABLED=false
SENTRY_DSN=