# Global Travel Report Environment Variables
# Copy this file to .env.local and fill in your actual values

# Base URL Configuration
NEXT_PUBLIC_BASE_URL=https://globaltravelreport.com

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/global-travel-report
# For production, use MongoDB Atlas or similar service

# Vercel KV (Redis) for caching
KV_URL=your-kv-url
KV_REST_API_URL=your-kv-rest-api-url
KV_REST_API_TOKEN=your-kv-token
KV_REST_API_READ_ONLY_TOKEN=your-kv-read-only-token

# OpenAI API for content generation
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-openai-org-id

# Social Media APIs
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
FACEBOOK_APP_ID=1122233334445556
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Google Services
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_SITE_VERIFICATION=your-google-site-verification-code
YANDEX_VERIFICATION=your-yandex-verification-code
YAHOO_VERIFICATION=your-yahoo-verification-code

# Email Configuration (for contact form)
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM_ADDRESS=noreply@globaltravelreport.com

# reCAPTCHA (optional, for contact form spam protection)
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Unsplash API (for image sourcing)
UNSPLASH_ACCESS_KEY=your-unsplash-access-key

# Security
SESSION_SECRET=your-super-secure-session-secret-min-32-chars
CSRF_SECRET=your-csrf-secret-key

# Development/Production Flags
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=https://globaltravelreport.com

# Cloudflare Configuration (when using Cloudflare)
CF_RAY_HEADER=your-cloudflare-ray-header
CF_IPCOUNTRY=your-cloudflare-country-header

# Performance Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Feature Flags
ENABLE_AFFILIATE_VERIFICATION=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_SOCIAL_MEDIA_POSTING=true
ENABLE_CONTENT_GENERATION=true

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Content Generation Settings
MAX_STORIES_PER_DAY=10
CONTENT_QUALITY_THRESHOLD=0.8
IMAGE_QUALITY_MINIMUM=85

# Backup and Monitoring
BACKUP_ENABLED=true
MONITORING_ENABLED=true
ERROR_REPORTING_WEBHOOK=your-error-webhook-url

# API Keys for External Services
WEATHER_API_KEY=your-weather-api-key
CURRENCY_API_KEY=your-currency-api-key
FLIGHT_API_KEY=your-flight-data-api-key

# Development Tools
ENABLE_DEBUG_LOGS=true
ENABLE_BUNDLE_ANALYZER=false
ENABLE_PERFORMANCE_MONITORING=true

# CDN Configuration
CDN_ENABLED=true
CDN_PROVIDER=cloudflare
CDN_CACHE_TTL=3600

# Image Optimization
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_QUALITY=85
IMAGE_SIZES="320,640,1024,1920"
IMAGE_FORMATS="webp,jpg,png"

# Social Media Integration
SOCIAL_MEDIA_ENABLED=true
AUTO_SOCIAL_POSTING=false
SOCIAL_POSTING_SCHEDULE="0 9,15,21 * * *"

# Content Management
CMS_ENABLED=true
CMS_PROVIDER=strapi
CMS_API_URL=your-cms-api-url
CMS_API_TOKEN=your-cms-api-token

# Analytics and Tracking
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=google
HEATMAP_TRACKING=false
USER_BEHAVIOR_TRACKING=true

# SEO Configuration
SEO_ENABLED=true
AUTO_GENERATE_SITEMAP=true
AUTO_GENERATE_STRUCTURED_DATA=true
AUTO_GENERATE_META_TAGS=true

# Performance Configuration
PERFORMANCE_MONITORING=true
CORE_WEB_VITALS_TRACKING=true
BUNDLE_SIZE_LIMIT=200000

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true