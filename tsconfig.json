{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noEmit": true,
    "incremental": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/src/*": [
        "src/*"
      ],
      "@/components/*": [
        "src/components/*",
        "components/*"
      ],
      "@/types/*": [
        "types/*",
        "src/types/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/app/*": [
        "app/*"
      ],
      "@/config/*": [
        "src/config/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/automation/*": [
        "automation/*"
      ]
    },
    "noFallthroughCasesInSwitch": false,
    "allowImportingTsExtensions": true,
    "types": [
      "react",
      "react-dom",
      "@types/react",
      "@types/react-dom",
      "node",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "coverage"
  ]
}
